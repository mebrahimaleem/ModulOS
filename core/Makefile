$(CORE_TARGETS_C): $(obj)/%.o: %.c $(deps)/%.d | $(obj)/core/
	$(KERNEL_CC) -MT $@ -MF $(deps)/$*.d -o $@ $(CFLAGS) $<

$(CORE_TARGETS_S): $(obj)/%.o: %.S $(deps)/%.d | $(obj)/core/
	$(KERNEL_CC) -MT $@ -MF $(deps)/$*.d -o $@ $(CFLAGS) $<
